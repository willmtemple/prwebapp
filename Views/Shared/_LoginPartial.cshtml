@using Microsoft.AspNetCore.Identity
@using PeerReviewWeb.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="right menu">
        <a class="item" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
            <i class="icon user"></i>@UserManager.GetUserName(User)
        </a>
        <form class="item" asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <button type="submt" class="ui inverted red basic button">Log Out</button>
        </form>
    </div>
}
else
{
    <a class="item" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
}
