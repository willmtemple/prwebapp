@model PeerReviewWeb.Models.CourseModels.Assignment

@{
    ViewData["Title"] = "New Assignment";
}

<div class="container">
    @if (ViewData["Error"] != null) {
        <div class="alert alert-danger" role="alert">
            <strong>Validation Error:</strong> @ViewData["Error"]
        </div>
    }
    <h3>Create An Assignment</h3>
    <form asp-action="Create">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label col-form-label-lg"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-lg" asp-for="Name" placeholder="Assignment Name..." />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea class="form-control" asp-for="Description" rows="3" placeholder="Optional"></textarea>
        </div>
        <div class="form-group">
            <label>Is this a group assignment?</label>
            @Html.RadioButtonFor(model => model.IsGroupAssignment, true) Yes
            @Html.RadioButtonFor(model => model.IsGroupAssignment, false) No
        </div>
        <div class="form-group">
            <label asp-for="MinGroupSize">Minimum Group Size</label>
            <input type="number" asp-for="MinGroupSize" />
        </div>
        <div class="form-group">
            <label asp-for="MaxGroupSize">Maximum Group Size</label>
            <input type="number" asp-for="MaxGroupSize" />
        </div>
        <div class="form-group">
            <label for="forCourse">Course ID</label>
            <input type="text" class="form-control" id="forCourse" name="forCourse" value="@ViewData["forCourse"]" />
            <small>For your own good, don't modify this.</small>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>